<%- include("partials/header.ejs") %>
    <div>
        <div class="form-container">
            <form action="/laburo" method="POST">
                <input type="text" name="nuevaNotaLaburo" placeholder="Nueva Nota Laboral" class="nota">
                <input type="submit" value="Agregar" id="agregar" class="botonnota">
            </form>
        </div>
        <ul>
            <% if (locals.toDoListLaburo) {for (let i = 0; i < toDoListLaburo.length ; i++) {%>
                <li><input type="checkbox" class="checkbox"><span><%= toDoListLaburo[i] %></span>
                    <form action="/eliminarLaburo" method="POST">
                        <input type="hidden" name="indice" value="<%= i %>">
                        <button type="submit" class="eliminar">X</button>
                    </form>
                </li>
                <%}}
                else %>
        </ul>
    </div>
    </div>
    <%- include("partials/footer.ejs") %>